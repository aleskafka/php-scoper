use Webmozart\PhpScoper\PhpScoperApplicationConfig;
use Webmozart\Console\ConsoleApplication;

require_once __DIR__.'/../vendor/autoload.php';

// Don't create the config just yet to make sure that errors thrown during its
// construction are rendered nicely on the terminal
$cli = new ConsoleApplication(function () { return new PhpScoperApplicationConfig(); });
$cli->run();
